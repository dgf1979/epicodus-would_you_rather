<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= choice.option %>...</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-3 col-sm-5 thumb">
    <a id="a" data-id="<%= choice.id %>" class="thumbnail" href='javascript:void(0)'>
      <img class="img-responsive" src="<%= choice.option_a_image %>" alt="">
      <span>A: <%= choice.option_a %></span>
    </a>
  </div>

  <div class="col-lg-2 col-sm-2">
    <div id="vote-display-<%= choice.id %>">
      <h1 id="or">OR</h1>
    </div>
  </div>

  <div class="col-lg-3 col-sm-5 thumb">
    <a id="b" data-id="<%= choice.id %>" class="thumbnail" href='javascript:void(0)' >
      <img class="img-responsive" src="<%= choice.option_b_image %>" alt="">
      <span>B: <%= choice.option_b %></span>
    </a>
  </div>

  <div class="col-lg-4 col-sm-12">
    <%= form_for([choice, @new_comment], remote: true) do |f| %>
      <div class="row">
        <div class="input-group comment-control">
          <%= f.text_field :text, class: "form-control" %>
          <span class="input-group-btn">
            <%= f.submit "Comment", class: "btn btn-default" %>
          </span>
        </div>
      </div>
    <% end %>

    <div class="comments-display" id="comments-display-for-choice-<%= choice.id %>">
      <%= render choice.comments %>
    </div>
  </div>

</div>
<div class="row hidden-form" data-id="<%= choice.id %>">

  <%= form_for(choice, remote: true) do |f| %>
  <%= f.text_field :option_a_votes, value: 0 %>
  <%= f.text_field :option_b_votes, value: 0 %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>

  <%= link_to 'Edit', edit_choice_path(choice) %> |
  <%= link_to 'Back', choices_path %>

</div>
