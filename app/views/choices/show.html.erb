<div class="container">
  <%= render @choice %>
</div>

<% content_for :nav_menu do %>
  <li><%= link_to 'Delete this Choice', @choice, method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>


<li><%= link_to 'Add New Choice', new_choice_path %></li>

<table style="display: none">
  <thead>
    <tr>
      <th>Option a</th>
      <th>Option b</th>
      <th>Option a votes</th>
      <th>Option b votes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choices.each do |choice| %>
    <tr>
      <td><%= link_to 'Show', choice %></td>
      <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
